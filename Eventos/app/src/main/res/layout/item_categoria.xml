<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >

    <View
        android:id="@+id/viewcategoria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCC"
        app:layout_constraintBottom_toBottomOf="@+id/txtnombrecategoria"
        app:layout_constraintEnd_toEndOf="@id/imagencategoria"
        app:layout_constraintStart_toStartOf="@id/imagencategoria"
        app:layout_constraintTop_toTopOf="@id/imagencategoria"
        />

    <ImageView
        android:id="@+id/imagencategoria"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/competencias"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <TextView
        android:id="@+id/txtnombrecategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imagencategoria"
        app:layout_constraintStart_toStartOf="@+id/imagencategoria"
        app:layout_constraintTop_toBottomOf="@+id/imagencategoria"


        android:layout_marginHorizontal="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>